{% extends 'admin/layout.html.twig' %}
{% form_theme form _self %}
{% use 'bootstrap_3_layout.html.twig' with form_label as base_form_label %}
{% use 'bootstrap_3_layout.html.twig' with form_widget_simple as base_form_widget_simple %}

{% block form_help -%}
    {% for attrname, attrvalue in attr %}
        {% if attrname == 'data-help' %}
            <span class="help-block">{{ attrvalue|raw }}</span>
        {% endif %}
    {% endfor %}
{%- endblock form_help %}
 
{% block form_errors -%}
    {{ parent() }}
    {{- block('form_help') -}}
{%- endblock form_errors %}

{% block form_label %}
    {{ block('base_form_label') }}

    {% if required %}
        <span class="required" style="color:red">*</span>
    {% endif %}
{% endblock %}
{% block _app_record_health_medications_row %}
    <div class="col-sm-offset-1 form-group">
