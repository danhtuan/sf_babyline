{% block body_id 'admin_record_new' %}

    {% block sidebar %}
        <div id="sidebar-content">
            <div class="list-group">
                <a class="list-group-item disabled
                   {% if step==1 %}
                       active" href="{{ path('admin_record_index')}}">
                   {% elseif step > 1 %}
                       " href="{{ path('admin_record_index')}}"><i class="fa fa-check"></i> 
                   {%endif%}                   
                    {{'sidebar.basic_info'|trans}}</a>
                <a class="list-group-item disabled
                   {% if step==2 %}
                       active " href="{{ path('admin_record_index')}}">
                   {% elseif step < 2 %}
                       " href="{{ path('admin_record_index')}}">
                   {% elseif step > 2 %}
                       " href="{{ path('admin_record_index')}}"><i class="fa fa-check"></i>
                   {%endif%}
                   {{'sidebar.health'|trans}}</a>
                <a class="list-group-item disabled
                   {% if step==3 %}
                       active " href="{{ path('admin_record_index')}}">
                   {% elseif step < 3 %}
                       " href="{{ path('admin_record_index')}}">
                   {% elseif step > 3 %}
                       " href="{{ path('admin_record_index')}}"><i class="fa fa-check"></i>
                   {%endif%}
                   {{'sidebar.appointment'|trans}}</a>
                
                <a class="list-group-item disabled
                   {% if step==4 %}
                       active " href="{{ path('admin_record_index')}}">
                   {% elseif step < 4 %}
                       " href="{{ path('admin_record_index')}}">
                   {%endif%}
                   {{'sidebar.review'|trans}}</a>
            </div>
        </div>

    {% endblock %}
    {% block main %}
        {{ include('default/_flash_messages.html.twig') }}
        
        <h1>{{ 'title.record_new'|trans }}</h1>
        {% if record.priority == 2 %}
            <div class="alert alert-dismissible alert-danger" role="alert">
                {{'label.high_priority'|trans }}
            </div>
        {% endif %}
        {% if step == 4%}
            <p>{{'label.review_info'|trans|raw}}</p>
        {% endif %}
        
        {{ include('admin/record/_form.html.twig', {
        include_back_to_home_link: true,
    }) }}
    {% endblock %}


